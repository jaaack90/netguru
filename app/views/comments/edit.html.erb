<h1>Editing comment</h1>

<%= error_messages_for :comment %>

<% form_for(@comment) do |f| %>
  <p>
    <b>Nick</b><br />
    <%= f.text_field :nick %>
  </p>

  <p>
    <b>Tresc</b><br />
    <%= f.text_area :tresc %>
  </p>

  <p>
    <b>Post</b><br />
    <%= f.text_field :post %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @comment %> |
<%= link_to 'Back', comments_path %>
